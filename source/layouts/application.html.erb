    <%= javascript_include_tag  "all" %>

    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
  </head>
  <body>

    <div class="site">
      <div class="header">
        <h1 class="title"><%= link_to 'Lafwind\'s Blog', '/' %></h1>

        <span class=<%= "active" if current_page.path == "about.html" %>>
          <%= link_to 'About', '/about.html', class: "extra" %>
        </span>

      </div>

      <%= yield %>

      <div class="footer">
        Â©Lafwind
      </div>
    </div>


  </body>
</html>
