<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <title>Lafwind<%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= stylesheet_link_tag "main", "syntax", "syntax_jekyll", "custom" %>
    <%= javascript_include_tag  "all" %>

    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
  </head>
  <body>

    <div class="site">
      <div class="header">
        <h1 class="title">
          <%= link_to 'Lafwind\'s blog', '/' %>
        </h1>
        <p>
          A developer...
        </p>
      </div>


      <div class="nav">

        <span class=<%= "active" if current_page.path == "index.html" %>>
          <%= link_to 'Blogs', '/index.html', class: "nav-item" %>
        </span>

        <span class=<%= "active" if current_page.path == "about.html" %>>
          <%= link_to 'About', '/about.html', class: "nav-item" %>
        </span>

        <%= link_to 'Github', 'http://www.github.com/lafwind', class: "nav-item" %>

        <span class=<%= "active" if current_page.path == "feed.xml" %>>
          <%= link_to 'Feed', '/feed.xml', class: "nav-item" %>
        </span>
      </div>

      <%= yield %>

      <div class="footer">
        <div>
          Â©2015 <%= link_to 'Lafwind', 'https://www.github.com/lafwind' %> </br>
          Theme is designed by <%= link_to 'Lafwind', 'https://www.github.com/lafwind' %>
        </div>
      </div>
    </div>


  </body>
</html>
